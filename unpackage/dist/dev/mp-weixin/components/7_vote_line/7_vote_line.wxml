<view class="content"><view class="uni-product-list"><block wx:for="{{productList}}" wx:for-item="product" wx:for-index="index" wx:key="index"><view class="uni-product"><view hidden="{{!(product.is_show)}}" class="bg_white"><view class="image-view"><block wx:if="{{renderImage}}"><image class="uni-product-image" src="{{product.image}}" mode="aspectFit"></image></block></view><view class="uni-product-title">{{product.title}}</view><view data-event-opts="{{[['tap',[['addLike',['$0'],[[['productList','',index,'id']]]]]]]}}" class="uni-product-price" bindtap="__e"><block wx:if="{{product.liked}}"><image class="liked" src="/static/like.png" mode></image></block><block wx:else><image class="liked" src="/static/like_none.png" mode></image></block><text class="uni-product-price-original">{{product.favourPrice}}</text></view></view></view></block></view></view>